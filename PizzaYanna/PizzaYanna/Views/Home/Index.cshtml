@section head
{
    <meta name="description" content="Our pizzas are made with the best ingredients you can find - order fresh and cheap pizzas now!">
    <meta name="keywords" content="home, page, description, information, restaurant, info, logo, welcome, pizza yanna, yanna, yana">
